{
  "name": "trials",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:clean": "rm -r dist; exit 0",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "dev": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules ./src/server/start.ts",
    "lint": "eslint . src --ext .ts",
    "start:trials:backend": "NODE_ENV=production node dist/src/server/start",
    "test": "npm run test:unit && npm run test:features",
    "test:unit": "NODE_ENV=test jest",
    "test:features": "npm run test:trials:backend:features",
    "test:trials:backend:features": "NODE_ENV=test cucumber-js -p trials_backend"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/convict": "^6.1.1",
    "@types/express": "^4.17.13",
    "@types/glob": "^7.2.0",
    "@types/node": "^17.0.16",
    "convict": "^6.2.1",
    "copy": "^0.3.2",
    "dotenv-flow": "^3.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.2",
    "express-promise-router": "^4.1.1",
    "glob": "^7.2.0",
    "http-status": "^1.5.0",
    "mongoose": "^6.2.2",
    "node-dependency-injection": "^2.7.1",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^7.3.2",
    "@faker-js/faker": "^6.0.0-alpha.6",
    "@types/jest": "^27.4.0",
    "@types/supertest": "^2.0.11",
    "jest": "^27.5.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8"
  }
}
